<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/main"
        tools:context=".MainActivity"
>
    <TextView
            android:text="@string/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreText"
            android:paddingBottom="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreVal"
            app:layout_constraintTop_toTopOf="@+id/scoreText"
            app:layout_constraintLeft_toRightOf="@+id/scoreText"
            android:text="@string/scoreVal"
            android:paddingEnd="20dp"/>
    <Button
            android:text="@string/gameState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pauseButton"
            app:layout_constraintTop_toTopOf="@+id/scoreVal"
            app:layout_constraintLeft_toRightOf="@+id/scoreVal"
            app:layout_constraintBottom_toBottomOf="@+id/scoreVal"/>
    <Button
            android:text="@string/gameLifecycleState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameStateButton"
            app:layout_constraintTop_toTopOf="@+id/pauseButton"
            app:layout_constraintBottom_toBottomOf="@+id/pauseButton"
            app:layout_constraintLeft_toRightOf="@+id/pauseButton"/>
    <TextView
            android:text="@string/livesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/livesText"
            app:layout_constraintTop_toTopOf="@+id/gameStateButton"
            app:layout_constraintBottom_toBottomOf="@+id/gameStateButton"
            app:layout_constraintLeft_toRightOf="@+id/gameStateButton"
            android:paddingStart="20dp"/>
    <TextView
            android:text="@string/livesVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/livesVal"
            app:layout_constraintTop_toTopOf="@+id/livesText"
            app:layout_constraintBottom_toBottomOf="@+id/livesText"
            app:layout_constraintLeft_toRightOf="@+id/livesText"
            android:paddingStart="10dp"/>
    <android.example.com.assignment3.GameView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gameView"/>
</android.support.constraint.ConstraintLayout>